@page "/patients-infections"

<MudContainer>
    <MudGrid Class="mt-8">
        <MudItem xs="12" md="12" sm="12">
            <MudText Align="Align.Center" Typo="Typo.h5">
                Patients Infections
            </MudText>
        </MudItem>
        <MudItem xs="12" md="6" sm="6">
            <MudTextField Label="Search" @bind-Value="Patient" Variant="Variant.Outlined" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Info"></MudTextField>
            <MudButton Color="Color.Info" Class="mt-3"
                       Style="border-radius:10px 10px 10px 10px"
                       Variant="Variant.Outlined">Add Infection</MudButton>
        </MudItem>
        <MudItem xs="12" md="3" sm="3">
            <MudDatePicker Variant="Variant.Outlined" Label="Infections From" @bind-Date="date" />
        </MudItem>
        <MudItem xs="12" md="3" sm="3">
            <MudDatePicker Variant="Variant.Outlined" Label="Infections To" @bind-Date="date" />
        </MudItem>


        <MudItem xs="12" md="6" sm="6">
            <MudExpansionPanels>
                <MudExpansionPanel Text="27 April 2022">
                    <MudCard Elevation="0" Style="border-radius:10px 10px 10px 10px">
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Success">
                                    P
                                </MudChip>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    N
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Present In Urine</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    E-Coli
                                </MudChip>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    Pseudomonas
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Medication</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Info">
                                    Sudafed
                                </MudChip>
                                <MudChip Size="Size.Large" Color="Color.Info">
                                    Antibiotics
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">CRP</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Info">
                                    Info
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">WBC</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Info">
                                    Info
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Follow Up</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Success">
                                    Yes
                                </MudChip>
                            </center>
                        </MudCardContent>
                    </MudCard>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudItem>



        <MudItem xs="12" md="6" sm="6">
            <MudExpansionPanels>
                <MudExpansionPanel Text="17 May 2022">
                    <MudCard Elevation="0" Style="border-radius:10px 10px 10px 10px">
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    P
                                </MudChip>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    N
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Present In Urine</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Success">
                                    None
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Medication</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Success">
                                    None
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">CRP</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Info">
                                    Info
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">WBC</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Success">
                                    None
                                </MudChip>
                            </center>
                        </MudCardContent>
                        <MudCardContent>
                            <MudText Typo="Typo.body1">Follow Up</MudText>
                        </MudCardContent>
                        <MudCardContent>
                            <center>
                                <MudChip Size="Size.Large" Color="Color.Error">
                                    No
                                </MudChip>
                            </center>
                        </MudCardContent>
                    </MudCard>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudItem>
    </MudGrid>
</MudContainer>

@code{
    DateTime? date = DateTime.Today;
    public string Patient;
}

