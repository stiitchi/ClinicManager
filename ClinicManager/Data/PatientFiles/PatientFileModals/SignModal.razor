@inject IDialogService DialogService
@using PatientFileModals

<MudDialog Style="width:400px;">
    <DialogContent>
            <MudItem md="12" sm="12">
                <center>
                       <MudButton Variant="Variant.Outlined"
                       Color="Color.Info" Class="mt-2"
                       Style="border-radius:10px 10px 10px 10px"
                       OnClick="Submit">Sign Report</MudButton>
                </center>
            </MudItem>
            <MudCard Outlined="true" Class="mt-2"
                     Style="width:350px; height:100px;
                     border-radius:10px 10px 10px 10px" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined"
                   Style="border-radius:10px 10px 10px 10px"
                   Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Success"
                   Style="border-radius:10px 10px 10px 10px"
                   OnClick="Submit">Add Signature</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
    public string value;
    public DateTime today = DateTime.Today;
    public TimeSpan time = DateTime.Now.TimeOfDay;

}