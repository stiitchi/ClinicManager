@inject IDialogService DialogService
@using PatientFileModals

  
        <MudItem xs="12" md="12" sm="12">
            <MudText Align="Align.Center" Typo="Typo.h6">
                Skin Integrity Report
            </MudText>
        </MudItem>
        <MudItem md="6" sm="6">
            <MudTextField @bind-Value="value" Label="Sacrum" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem md="6" sm="6">
            <MudTextField @bind-Value="value" Label="Hips" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem md="6" sm="6">
            <MudTextField @bind-Value="value" Label="Heals" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem md="6" sm="6">
            <MudTextField @bind-Value="value" Label="Others" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem md="12" sm="12">
            <MudTextField @bind-Value="value" Label="Comments" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem md="6" sm="6">
        <MudButton Variant="Variant.Outlined" Color="Color.Info"
                   Style="border-radius:10px 10px 10px 10px"
                   >Sign</MudButton>
   
        </MudItem>
        <MudItem md="6" sm="6">
            <MudButton Variant="Variant.Outlined" Color="Color.Success"
                       Style="border-radius:10px 10px 10px 10px"
                       OnClick="Submit">Add Skin Report</MudButton>
        </MudItem>

@code {

    public string value;
    public DateTime today = DateTime.Today;
    public TimeSpan time = DateTime.Now.TimeOfDay;

    private void Submit()
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraLarge, };
        DialogService.Show<DateSelector>("Select Date", parameters, options);
    }

   

}