<EditForm Model="@AddHeartRateChartModel" OnValidSubmit="SaveAsync">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
               Heart Rate Chart
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="5">
                    <MudTextField T="double" For="@(() => AddHeartRateChartModel.HeartRateChartEntry)" Clearable="true" @bind-Value="AddHeartRateChartModel.HeartRateChartEntry" Label="Chart Entry" />
                </MudItem>
                <MudItem xs="7">
                    <center>
                    <MudButton Variant="Variant.Outlined" Class="mt-3" Disabled="chartDrawn" Color="Color.Info" @onclick="@(() => AddToChart(AddHeartRateChartModel.HeartRateChartEntry))">Add Value</MudButton>
                    </center>
                </MudItem>
                    @if(ChartValues.Count() > 0)
                    {
                        <MudGrid>
                        @foreach(var item in ChartValues)
                        {
                            <MudItem xs="2">
                                <MudCard Elevation="4">
                                    <MudCardContent>
                                        <MudText Align="Align.Center">@item</MudText>
                                    </MudCardContent>
                                </MudCard>
                            </MudItem>
                        }
                        </MudGrid>
                    }                   

                <MudItem xs="12">
                    @if(chartDrawn == true)
                    {
                    <MudChart ChartType="ChartType.Line"  ChartSeries="@Series" @bind-SelectedIndex="Index" XAxisLabels="@XAxisLabels" Width="100%" Height="350px"></MudChart>
                    }
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
        <MudButton DisableElevation Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton DisableElevation Variant="Variant.Outlined" Color="Color.Info" Disabled="@(isDisabled || chartDrawn)"  OnClick="DrawChart">Draw Chart</MudButton>
        <MudButton DisableElevation Variant="Variant.Outlined" ButtonType="ButtonType.Submit" 
        Disabled="@(_processing || CanSave)"  Color="Color.Success">
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Processing</MudText>
            }
            else    
            {
                <MudText>Save Chart</MudText>
            }
        </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@code {
