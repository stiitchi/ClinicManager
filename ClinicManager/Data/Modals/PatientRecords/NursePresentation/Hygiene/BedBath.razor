@using ClinicManager.Shared.Wrappers
@using ClinicManager.Web.Infrastructure.Services.PatientRecords
@using ClinicManager.Shared.DTO_s.Records.Hygiene
@inject IPatientRecordService patientRecordService 


<MudDialog Style="width:400px;">
    <DialogContent>
        <EditForm Model="AddEditEliminationModel" OnValidSubmit="SaveAsync">
        <MudItem xs="8" md="12" sm="12">
            <MudTextField @bind-Value="AddEditEliminationModel.BedBathFreq"  Label="Frequency" Variant="Variant.Outlined" />
        </MudItem>
