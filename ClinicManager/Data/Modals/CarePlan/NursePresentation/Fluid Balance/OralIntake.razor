@using ClinicManager.Shared.Wrappers
@using ClinicManager.Web.Infrastructure.Services.PatientRecords
@using ClinicManager.Shared.DTO_s.Records.FluidBalance
@inject IPatientRecordService patientRecordService 


<MudDialog Style="width:400px;">
    <DialogContent>
        <EditForm Model="AddEditFluidBalanceModel" OnValidSubmit="SaveAsync">
        <MudItem xs="8" md="12" sm="12">
            <MudTimePicker Variant="Variant.Outlined" Time="time" AmPm="true" />
        </MudItem>
        <MudItem xs="8" md="12" sm="12">
            <MudTextField @bind-Value="AddEditFluidBalanceModel.OralIntakeMl"  Label="Oral Intake Ml" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="8" md="12" sm="12">
            <MudTextField @bind-Value="AddEditFluidBalanceModel.OralIntakeVolume"  Label="Oral Intake Volume" Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="8" md="12" sm="12">
            <MudSelect T="string" Label="Record Type" @bind-Value="AddEditFluidBalanceModel.OralCheckType" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="@("Oral Check")" />
                <MudSelectItem Value="@("Stetoscope")" />
             </MudSelect>
        </MudItem>

        <MudItem xs="8" md="12" sm="12">
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Info" Class="mt-2"
                       Style="border-radius:10px 10px 10px 10px"
                       >Sign Report</MudButton>
            <MudCard Outlined="true" Class="mt-2"
                     Style="width:350px; height:100px;
                     border-radius:10px 10px 10px 10px" />
        </MudItem>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined"
                   Style="border-radius:10px 10px 10px 10px"
                   Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Success"
                   Style="border-radius:10px 10px 10px 10px"
                    OnClick="(() => SaveAsync())">Add Oral Intake Record</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public OralIntakeDTO AddEditFluidBalanceModel { get; set; } = new();
    void Cancel() => MudDialog.Cancel();
    private bool _processing = false;
    public DateTime today = DateTime.Today;
    public TimeSpan time = DateTime.Now.TimeOfDay;

    private async Task SaveAsync()
    {
        _processing = true;
        IResult<int> response;
        AddEditFluidBalanceModel.PatientId = 1;
        
        time = AddEditFluidBalanceModel.OralIntakeTime.TimeOfDay;
        response = await patientRecordService.AddOralInputTestRecord(AddEditFluidBalanceModel);
        if (response.Succeeded)
        {
            _snackBar.Add("Oral Intake Record Saved", Severity.Success);
            _processing = false;
            MudDialog.Close();
        }
        else
        {
            foreach (var message in response.Messages)
            {
                _snackBar.Add(message, Severity.Error);
                MudDialog.Close();
            }
        }
    }     
}